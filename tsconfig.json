{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",
    "module": "commonjs",
    "allowJs": false,
    "outDir": "./dist",
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "exclude": [
    "client",
    "dist",
    "node_modules",
    "**/*.stories.tsx"
  ],
  "lib": ["es2015"],
  "typeRoots": [
    "./src/typing-stubs",
    "node_modules/@types"
  ]
}
